<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.ders.gatekeeper">
    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_gt"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_gt_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="cz.ders.gatekeeper.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="cz.ders.gatekeeper.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.ders.gatekeeper.MainActivity" />
        </activity>
        <activity
            android:name="cz.ders.gatekeeper.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
    </application>

</manifest>